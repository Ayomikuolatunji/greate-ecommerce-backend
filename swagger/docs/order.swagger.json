                                            "id": {
                                                "type": "string",
                                                "example": "c3f2f6a2-dac1-47c2-9326-5d457f331b9e"
                                            },
                                            "userId": {
                                                "type": "string",
                                                "example": "7c1f9fba-42f3-4ff2-9220-57a8e4735505"
                                            },
                                            "totalPrice": {
                                                "type": "number",
                                                "example": 299.99
                                            },
                                            "deliveryAddress": {
                                                "type": "string",
                                                "example": "1234 Elm Street"
                                            },
                                            "createdAt": {
                                                "type": "string",
                                                "example": "2024-10-20T14:48:00.000Z"
                                            },
                                            "orderItems": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object",
                                                    "properties": {
                                                        "productId": {
                                                            "type": "string",
                                                            "example": "b3a9f1d9-829f-44d5-bc79-7d3837d9b123"
                                                        },
                                                        "quantity": {
                                                            "type": "integer",
